#include <iostream>
using namespace std;
int main()
{
	char operator;
	float x, y;
	cout << "choose an operator (+,-,*,/)" << endl;
	cin >> operator;
	cout << "enter 2 numbers\n";
	cin >> x >> y;
	switch (operator)
	{
	case '+':cout << "\nx+y=" << x + y; break;
	case '-':cout << "\nx-y=" << x - y; break;
	case '*':cout << "\nx*y=" << x * y; break;
	case '/':cout << "\nx/y=" << x / y; break;
	default:cout << "wrong choice";
	}
	return 0;
}
