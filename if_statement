//Example of if statement
//By niqabytedev

#include <iostream>
using namespace std;
int main()
{
	
	int number;
	cout << "enter a number\n";
	cin >> number;
	if (number > 0) {
		cout << "your number is positive" << endl;
	}
	else if (number == 0) {
		cout << "your number is zero" << endl;
	}
	else {
		cout << "your number is negative" << endl;
	}
}
